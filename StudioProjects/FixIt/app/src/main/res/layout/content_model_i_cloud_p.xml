<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.fixit.fixit.model_i_cloud_p"
tools:showIn="@layout/activity_model_i_cloud_p"
android:background="@color/nice_plain">

<ScrollView
    style="@style/scrollbar_shape_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="25dp"
    android:paddingTop="1dp"
    android:layout_marginRight="2dp"
    android:layout_marginEnd="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_3g"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud 3G"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_4g"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud 4G"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_m"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud M"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_n"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud N"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_q"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud Q"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_string"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud String"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_x"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud X"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_y"
            android:background="@mipmap/backgroundforcards"
            android:text="Cloud Y"
            android:textSize="35sp"
            android:padding="10dp" />
        <Button
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="ch_i_cloud_other"
            android:background="@mipmap/backgroundforcards"
            android:text="Other Cloud Models"
            android:textSize="35sp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""/>

    </LinearLayout>


</ScrollView>

</LinearLayout>


