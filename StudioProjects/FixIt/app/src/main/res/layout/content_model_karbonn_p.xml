<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fixit.fixit.model_karbonn_p"
    tools:showIn="@layout/activity_model_karbonn_p"
    android:background="@color/nice_plain">

    <ScrollView
        style="@style/scrollbar_shape_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="25dp"
        android:paddingTop="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_a"
                android:background="@mipmap/backgroundforcards"
                android:text="A"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_alfa"
                android:background="@mipmap/backgroundforcards"
                android:text="Alfa"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_aura"
                android:background="@mipmap/backgroundforcards"
                android:text="Aura"
                android:textSize="40sp"
                android:padding="10dp" />

            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_k"
                android:background="@mipmap/backgroundforcards"
                android:text="K"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_legend"
                android:background="@mipmap/backgroundforcards"
                android:text="Legend"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_opium"
                android:background="@mipmap/backgroundforcards"
                android:text="Opium"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_platinum"
                android:background="@mipmap/backgroundforcards"
                android:text="Platinum P9"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_quattro"
                android:background="@mipmap/backgroundforcards"
                android:text="Quattro"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_s15"
                android:background="@mipmap/backgroundforcards"
                android:text="S15"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_smart"
                android:background="@mipmap/backgroundforcards"
                android:text="Smart"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_sparkle"
                android:background="@mipmap/backgroundforcards"
                android:text="Sparkle V"
                android:textSize="40sp"
                android:padding="10dp" />
            <Button
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="ch_karbonn_titanium"
                android:background="@mipmap/backgroundforcards"
                android:text="Titanium"
                android:textSize="40sp"
                android:padding="10dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>