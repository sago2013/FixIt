<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fixit.fixit.model_microsoft_p"
    tools:showIn="@layout/activity_model_microsoft_p"
    android:background="@drawable/newbackgroun">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="0.74"
        android:elevation="5dp"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="25dp"
        android:paddingBottom="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">


            <Button
                android:layout_width="300dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:onClick="ch_micro_lumia"
                android:background="@drawable/backgroundforcards"
                android:text="Lumia"
                android:textSize="40sp"
                android:padding="10dp" />

            <Button
                android:layout_width="300dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:onClick="ch_micro_lumia_dual"
                android:background="@drawable/backgroundforcards"
                android:text="Lumia Dual SIM"
                android:textSize="35sp"
                android:padding="10dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>

