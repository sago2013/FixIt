<resources>

    <!-- Scrollbar Specs-->
    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb_custom</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track_custom</item>
        <item name="android:scrollbarSize">8dp</item>
        <item name="android:scrollbarFadeDuration">500</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">50</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<!-- tab style-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- rating bar style-->
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>

    <!--Input layout custom style
    <style name="CustomTextLabel" parent="TextAppearance.AppCompat">
         Hint color and label color in FALSE state
        <item name="android:textColorHint">#c40303</item>
